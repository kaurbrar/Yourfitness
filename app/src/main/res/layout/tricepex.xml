<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRICEPS"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/tone"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THIS EXERCISE ISOLATES THE TRICEPS MUSCLES INDIVIDUALLY."
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/ttwo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THIS EXERCISE USES A SINGLE DUMBBELL HELD BETWEEN BOTH HANDS TO WORK THE TRICEPS"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/tthree"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THIS EXERCISE IS ONE OF THE MOST BASIC AND STILL ONE OF THE BEST FOR BUILDING TRICEP"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            />




    </LinearLayout>

</ScrollView>